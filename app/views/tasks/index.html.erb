<h1>My Tasks</h1>

<ul class="list-group">
  <% @tasks.each do |task| %>
    <li class="list-group-item">
    <input class="form-check-input me-1" type="checkbox" value="" aria-label="...">
    <%= link_to task.title, task_path(task) %>
  </li>
  <% end %>
</ul>

<p><%= link_to '+ Add a new task', new_task_path %></p>
